<!-- 文章內容 -->
<article class="post-detail">
  <!-- 文章標題區 -->
  <header class="post-header">
    <div class="container">
      <div class="post-meta">
        <time datetime="<%= @post.published_at&.iso8601 %>">
          <%= @post.published_at&.strftime("%Y年%m月%d日") %>
        </time>
      </div>
      <h1><%= @post.title %></h1>
      <% if @post.summary.present? %>
        <p class="post-lead"><%= @post.summary %></p>
      <% end %>
    </div>
  </header>

  <!-- 文章內容 -->
  <div class="post-body">
    <div class="container container-narrow">
      <div class="post-content-text">
        <%= simple_format(@post.content) %>
      </div>

      <!-- 分享和返回 -->
      <div class="post-actions">
        <%= link_to posts_path, class: "btn btn-outline" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
          返回列表
        <% end %>
      </div>
    </div>
  </div>
</article>

<!-- 相關文章 -->
<% if @recent_posts.any? %>
  <section class="section related-posts">
    <div class="container">
      <div class="section-title">
        <h2>其他消息</h2>
        <p>更多協會最新動態</p>
      </div>
      <div class="posts-grid posts-grid-small">
        <% @recent_posts.each do |post| %>
          <article class="post-card fade-in">
            <div class="post-content">
              <time class="post-date" datetime="<%= post.published_at&.iso8601 %>">
                <%= post.published_at&.strftime("%Y年%m月%d日") %>
              </time>
              <h3 class="post-title">
                <%= link_to post.title, post_path(post.slug) %>
              </h3>
            </div>
          </article>
        <% end %>
      </div>
    </div>
  </section>
<% end %>

